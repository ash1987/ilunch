<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:zhy="http://schemas.android.com/apk/res/com.company.ilunch"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="8dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.company.ilunch.widget.CustomImageView
            android:id="@+id/userCIV"
            android:layout_width="50dp"
            android:layout_height="50dp"
            zhy:src="@drawable/ic_launcher"
            zhy:type="circle" />

        <TextView
            android:id="@+id/userNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/userCIV"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/userCIV"
            android:singleLine="true"
            android:text="Arthur"
            android:textColor="#555555"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/timeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/userNameTv"
            android:text="1小时前"
            android:textColor="#888888"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/contentTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/userNameTv"
            android:layout_below="@id/userNameTv"
            android:layout_marginTop="5dp"
            android:text="牛肉丸特别好吃，很正宗，买过好多次了团了一个六人餐，一个四人餐，加了三样，六个大人两个小孩吃撑，才400多！"
            android:textColor="#777777"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/xian_heng" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp" >

        <TextView
            android:id="@+id/merchantNameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正潮汕头牛肉馆(南村店)"
            android:textColor="#777777"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/merchantAddTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/merchantNameTv"
            android:layout_below="@id/merchantNameTv"
            android:layout_marginTop="3dp"
            android:drawableLeft="@drawable/icon_place1"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:text="南村兴南大道32-1号维景大酒店1楼(近雅景酒家)"
            android:textColor="#777777"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/merchantTelTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/merchantAddTv"
            android:layout_below="@id/merchantAddTv"
            android:layout_marginTop="3dp"
            android:drawableLeft="@drawable/icon_tel"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:text="020-34822555"
            android:textColor="#777777"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>