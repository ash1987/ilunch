<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:zhy="http://schemas.android.com/apk/res/com.company.ilunch"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp" >

    <com.company.ilunch.widget.CustomImageView
        android:id="@+id/userCIV"
        android:layout_width="50dp"
        android:layout_height="50dp"
        zhy:src="@drawable/ic_launcher"
        zhy:type="circle" />

    <TextView
        android:id="@+id/userNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/userCIV"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/userCIV"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Michelle"
        android:textColor="#FF830C"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/contentTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/userCIV"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/userCIV"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="UI设计真TM烂！"
        android:textColor="@android:color/black"
        android:textSize="18sp" />
    
    <View
        android:layout_alignParentBottom="true"
        android:layout_height="0.1dp"
        android:paddingBottom="-6dp"
        android:layout_width="match_parent"
        android:background="#c1c1c1"/>

</RelativeLayout>