<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_title_height"
        android:background="@drawable/top_bar_bg" >

        <TextView
            android:id="@+id/userAddressTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:clickable="true"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <View
            android:id="@+id/tempView"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/dzDescTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tempView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:text="订座"
            android:textColor="#cccccc"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/dzIv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_above="@id/dzDescTv"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:src="@drawable/home_icon_book" />

        <ImageView
            android:id="@+id/dbIv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/tempView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:src="@drawable/home_icon_pack" />

        <TextView
            android:id="@+id/dbDescTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dbIv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="打包"
            android:textColor="#cccccc"
            android:textSize="13sp" />
    </RelativeLayout>

</LinearLayout>